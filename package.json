{
  "name": "vue-translator",
  "version": "0.8.0",
  "description": "A deadly simple i18n translate plugin for Vue, ready for Server Side Rendering.",
  "main": "dist/cjs/vue-translator.js",
  "module": "dist/esm/index.js",
  "unpkg": "dist/umd/vue-translator.js",
  "repository": "git@github.com:JounQin/vue-translator.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "scripts": {
    "build:esm": "tsc -P tsconfig.build.json -m esnext --outDir dist/esm -d",
    "build:cjs": "cross-env FORMAT=cjs rollup -c",
    "build:umd": "concurrently \"rollup -c\" \"cross-env NODE_ENV=production rollup -c\"",
    "build": "rimraf dist && npm run build:esm && concurrently \"npm run build:cjs\" \"npm run build:umd\"",
    "lint": "tslint -p . -e 'node_modules/**' -e 'dist/**' -t stylish '**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "test": "cross-env NODE_ENV=development jest",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "types": "dist/esm/index.d.ts",
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\/test\\/.*|\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint -p . -t stylish --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "peerDependencies": {
    "vue": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/lodash": "^4.14.110",
    "@types/node": "^10.3.5",
    "@vue/test-utils": "^1.0.0-beta.20",
    "concurrently": "^3.6.0",
    "cross-env": "^5.2.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.10",
    "prettier": "^1.13.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.2",
    "vue": "^2.5.16",
    "vue-server-renderer": "^2.5.16",
    "vue-template-compiler": "^2.5.16"
  }
}
